buildscript {
    repositories {
        maven { url 'https://maven.fabric.io/public' }
    }

    dependencies {
        classpath 'io.fabric.tools:gradle:1.+'
    }
}
apply plugin: 'com.android.application'
apply plugin: 'io.fabric'

repositories {
    maven { url 'https://maven.fabric.io/public' }
    maven { url 'https://zendesk.jfrog.io/zendesk/repo' }
}


android {
    compileSdkVersion 25
    buildToolsVersion "23.0.3"

    sourceSets {
        main {
            jniLibs.srcDirs = ['libs']
        }
    }

    defaultConfig {
        applicationId "sg.com.conversant.swiftplayer"
        minSdkVersion 16
        targetSdkVersion 23
        versionCode 3
        versionName "1.3"

        multiDexEnabled true

        applicationVariants.all { variant ->
            variant.outputs.each { output ->
                def file = output.outputFile
                def fileName = file.name.replace(".apk", "_" + versionName + "" + ".apk")
                output.outputFile = new File(file.parentFile, fileName)
            }
        }

        ndk {
            // 设置支持的SO库架构
            abiFilters 'armeabi' , 'x86', 'armeabi-v7a', 'x86_64', 'arm64-v8a'
        }
    }
    signingConfigs {
        debug{
            storeFile file("com.johnny.android.keystore.jks")
            storePassword "DaisyLi"
            keyAlias "johnny.keystore"
            keyPassword "JohnnyQin"
        }
        release{
            storeFile file("com.johnny.android.keystore.jks")
            storePassword "DaisyLi"
            keyAlias "johnny.keystore"
            keyPassword "JohnnyQin"
        }
    }

    buildTypes {
        debug {
            versionNameSuffix ""
            try {
                signingConfig signingConfigs.debug
            } catch (ex) {
            }
            minifyEnabled false
        }
        release {
            try {
                signingConfig signingConfigs.release
            } catch (ex) {
            }
            zipAlignEnabled true
            minifyEnabled false

            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
        }
    }

    lintOptions {
        abortOnError false
    }
}

dependencies {
    compile fileTree(include: ['*.jar'], dir: 'libs')
    testCompile 'junit:junit:4.12'
    compile('com.android.support:appcompat-v7:25.1.0') {
        exclude group: 'com.android.support', module: 'support-v4'
    }

    compile('com.android.support:recyclerview-v7:25.1.0') {
        exclude module: 'support-annotations'
        exclude module: 'support-v4'
    }
    compile('com.android.support:design:25.1.0') {
        exclude module: 'appcompat-v7'
        exclude module: 'recyclerview-v7'
        exclude module: 'support-v4'
    }

    compile 'com.android.support:support-annotations:25.1.0'
    compile 'com.android.support:cardview-v7:25.1.0'

    compile('com.facebook.fresco:fresco:0.8.1') {
        exclude module: 'imagepipeline'
        exclude module: 'fbcore'
        exclude module: 'drawee'
    }
    compile('com.facebook.fresco:imagepipeline:0.8.1') {
        exclude module: 'fbcore'
        exclude module: 'support-v4'
    }
    compile('com.facebook.fresco:drawee:0.8.1') {
        exclude module: 'fbcore'
        exclude module: 'support-v4'
    }
    compile 'com.facebook.fresco:fbcore:0.8.1'

    compile('fr.baloomba:viewpagerindicator:2.4.2') {
        exclude module: 'support-v4'
    }

    compile 'com.github.ctiao:dfm:0.4.2'

    compile 'com.loopj.android:android-async-http:1.4.9'
    compile 'com.google.code.gson:gson:2.7'
    compile 'com.roughike:bottom-bar:1.3.4'
    compile('com.github.afollestad.material-dialogs:core:0.8.5.1@aar') {
        transitive = true
    }
    compile 'io.karim:materialtabs:2.0.5'
    compile 'com.jakewharton:butterknife:6.0.0'
    compile 'com.flaviofaria:kenburnsview:1.0.7'
    compile 'com.blunderer:materialdesignlibrary:2.0.4'
    compile 'com.github.satyan:sugar:1.5'
    compile('com.crashlytics.sdk.android:crashlytics:2.6.8@aar') {
        transitive = true;
    }
    compile 'com.tencent.bugly:crashreport:2.6.5' //其中latest.release指代最新Bugly SDK版本号，也可以指定明确的版本号，例如2.2.0
    compile 'com.tencent.bugly:nativecrashreport:3.3.0' //其中latest.release指代最新Bugly NDK版本号，也可以指定明确的版本号，例如3.0

    compile 'io.reactivex:rxjava:1.1.0'
    compile 'io.reactivex:rxandroid:1.1.0'
    compile 'com.squareup.retrofit2:retrofit:2.0.0-beta4'
    compile 'com.squareup.retrofit2:converter-gson:2.0.0-beta4'
    compile 'com.squareup.retrofit2:adapter-rxjava:2.0.0-beta4'

    compile 'io.doorbell:android-sdk:0.2.6@aar'
    compile('com.zendesk:sdk:1.10.1.1@aar') {
        transitive = true;
    }
    compile('io.fabric.sdk.android:fabric:1.3.10@aar') {
        transitive = true;
    }

    compile 'com.google.android:flexbox:0.2.6'
    compile 'com.zendesk:belvedere:1.2.0.1'
}
